<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


 <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="GO"
     android:gravity="center"
     android:textSize="80dp"
     android:textStyle="bold"
     android:layout_gravity="center"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintBottom_toBottomOf="parent"
     android:background="@color/colorPrimaryDark"
     android:textColor="#F9E9E8"
     android:padding="40dp"
     android:onClick="start"
     android:id="@+id/start"
     />
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:visibility="invisible">

    <TextView
        android:id="@+id/seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="30s"
        android:textSize="20sp"
        android:background="#F5F888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sum"
        android:text="1+2"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/seconds"
        app:layout_constraintEnd_toStartOf="@id/score"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="25dp"/>
    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="0/0"
        android:textSize="20sp"
        android:background="#73FB08"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/options1"
        app:layout_constraintTop_toBottomOf="@id/sum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@id/options2"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/button1"
            android:text="3"
            android:textSize="20dp"
            android:background="#F5BDC7"
            android:tag="0"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:onClick="check"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/button2"
            android:text="3"
            android:textSize="20dp"
            android:background="#CCF3F4"
            android:tag="1"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:onClick="check"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/options2"
        app:layout_constraintTop_toBottomOf="@id/options1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/correct"
        android:orientation="horizontal"
        android:weightSum="2"

        >
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/button3"
            android:text="3"
            android:textSize="20dp"
            android:background="#EACCF4"
            android:tag="2"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:onClick="check"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/button4"
            android:text="3"
            android:textSize="20dp"
            android:background="#F4E4CC"
            android:tag="3"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:onClick="check"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/correct"
        app:layout_constraintTop_toBottomOf="@id/options2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        android:textSize="20dp"
        android:layout_margin="10dp"/>

</android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/show"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:background="#EEFCA4"
        android:visibility="invisible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finalScore"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:text=""
            android:layout_margin="10dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playAgain"
            android:text="Play Again"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:onClick="start"
            android:padding="10dp"

            />
    </LinearLayout>
        </android.support.constraint.ConstraintLayout>


